    "cheerio": "^1.0.0",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.5",
    "drizzle-orm": "^0.40.0",
    "elysia": "^1.2.25",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.14.0"
